{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "moduleResolution": "node",
    "paths": {
      "@mazic/design-system": ["packages/design-system/src/index.ts"],
      "@/utils/*": ["packages/design-system/src/utils/*"],
    }
  },
  "files": [],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
